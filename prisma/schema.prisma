// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  // The binaryTargets option is crucial for deploying to environments like Vercel or AWS Lambda
  // It ensures the correct Prisma engine is available.
  // We predict 'linux-musl' might be needed, but 'native' is a good default.
  binaryTargets   = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Order {
  id           String      @id @default(cuid())
  customerName String?
  createdAt    DateTime    @default(now())
  updatedAt    DateTime    @updatedAt
  status       String      @default("Pending") // e.g., Pending, Processing, Shipped
  total        Float
  items        OrderItem[]
  workOrders   WorkOrder[]
}

model OrderItem {
  id        String   @id @default(cuid())
  order     Order    @relation(fields: [orderId], references: [id])
  orderId   String
  productId String // e.g., "tshirt-standard-white"
  color     String
  size      String
  quantity  Int
  createdAt DateTime @default(now())
}

model WorkOrder {
  id              String   @id @default(cuid())
  order           Order    @relation(fields: [orderId], references: [id])
  orderId         String
  productName     String   // e.g., "T-Shirt"
  productColor    String
  productSize     String
  designDataUri   String   @db.Text
  quantity        Int
  status          String   @default("Needs Production") // e.g., Needs Production, In Progress, Completed
  isSubcontract   Boolean  @default(false)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
